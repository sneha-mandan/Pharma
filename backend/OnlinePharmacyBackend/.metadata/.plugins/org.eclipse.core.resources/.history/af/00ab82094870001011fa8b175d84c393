package com.excelR.OnlinePharmacyApplication.exception;

public class CustomExceptions {

    // Triggered when a user does not exist in the system
    public static class UserNotFoundException extends RuntimeException {
        public UserNotFoundException(String message) {
            super(message);
        }
    }

    // Triggered when a user hasn't been approved yet
    public static class UserNotApprovedException extends RuntimeException {
        public UserNotApprovedException(String message) {
            super(message);
        }
    }

    // Triggered when the requested drug is not found
    public static class DrugNotFoundException extends RuntimeException {
        public DrugNotFoundException(String message) {
            super(message);
        }
    }

    // Optional: Use this if you handle stock checks
    public static class DrugOutOfStockException extends RuntimeException {
        public DrugOutOfStockException(String message) {
            super(message);
        }
    }
}
