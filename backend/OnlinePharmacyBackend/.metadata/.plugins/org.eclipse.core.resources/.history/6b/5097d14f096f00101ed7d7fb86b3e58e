package com.excelR.OnlinePharmacyApplication.service;

import com.excelR.OnlinePharmacyApplication.entity.Cart;
import com.excelR.OnlinePharmacyApplication.entity.Drug;
import com.excelR.OnlinePharmacyApplication.entity.User;
import com.excelR.OnlinePharmacyApplication.repository.CartRepository;
import com.excelR.OnlinePharmacyApplication.repository.DrugRepository;
import com.excelR.OnlinePharmacyApplication.repository.UserRepository;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class CartService {

    @Autowired
    private CartRepository cartRepository;

    @Autowired
    private UserRepository userRepository;  // ðŸ‘‰ Added

    @Autowired
    private DrugRepository drugRepository;  // ðŸ‘‰ Added

    public void clearCartByUserId(Long userId) {
        cartRepository.deleteByUserId(userId);
    }

    public void addToCart(Cart cart) {
        // ðŸ‘‰ Fetch drug and user entities
        Drug drug = drugRepository.findById(cart.getDrug().getId()).orElseThrow(() -> new RuntimeException("Drug not found"));
        User user = userRepository.findById(cart.getUser().getId()).orElseThrow(() -> new RuntimeException("User not found"));

        cart.setDrug(drug);
        cart.setUser(user);
        cart.setQuantity(cart.getQuantity());

        System.out.println("Saving cart for user: " + user.getUsername() + " and drug: " + drug.getName());
        cartRepository.save(cart);  // âœ… Persist to DB
    }

    public List<Cart> getCartByUserId(Long userId) {
        // ðŸ‘‰ Placeholder for actual fetch logic, implement this if needed
        return cartRepository.findAll();  // Or implement custom query by userId
    }
}
